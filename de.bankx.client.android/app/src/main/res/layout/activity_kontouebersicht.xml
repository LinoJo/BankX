<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="de.bankx.client.android.KontouebersichtActivity">

    <ListView
        android:id="@+id/listeTransaktionen"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:headerDividersEnabled="false"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/textKontonummer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:text="invisible Text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text"
        android:layout_alignBottom="@+id/text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="47dp"
        android:text="Kontonummer"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listeTransaktionen"
        android:layout_alignStart="@+id/textKontostand"
        android:layout_marginBottom="14dp"
        android:text="Ãœberweisungen"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textKontoinhaber"
        android:layout_below="@+id/text"
        android:layout_marginTop="60dp"
        android:text="Saldo"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textKontostand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:text="kontostand"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:text="Kontoinhaber"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textKontoinhaber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text"
        android:layout_below="@+id/text"
        android:text="TextView"
        android:textSize="18sp" />

</RelativeLayout>